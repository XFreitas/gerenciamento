<div class="card mb-4">
  <div class="card-body">When scrolling, the navigation stays at the top of the page. This is the end of the static navigation demo.</div>
</div>

<div class="modal fade" id="crud" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
      </div>
      <div class="modal-body mx-auto">
        <div class="spinner-border" role="status"></div>
      </div>
      <div class="modal-footer"></div>
    </div>
  </div>
</div>

<script type="text/javascript">
  const modalElement = document.getElementById('crud');

  modalElement.addEventListener('hidden.bs.modal', function(event) {
    modalElement.innerHTML = '<div class="modal-dialog">' +
      '  <div class="modal-content">' +
      '    <div class="modal-header">' +
      '      <h5 class="modal-title"></h5>' +
      '    </div>' +
      '    <div class="modal-body mx-auto">' +
      '      <div class="spinner-border" role="status"></div>' +
      '    </div>' +
      '    <div class="modal-footer"></div>' +
      '  </div>' +
      '</div>';
  });

  function showModal() {
    const myModal = bootstrap.Modal.getOrCreateInstance(modalElement);

    myModal.show();

    axios.get('/contasbancarias/create').then(html => {
      modalElement.innerHTML = html.data;
      let scripts = modalElement.getElementsByTagName('script');

      for (let i = 0; i < scripts.length; i++) {
        eval(scripts[i].innerHTML);
      }
    }).catch(error => {
      console.log(error);
      myModal.hide();
    });
  }
</script>